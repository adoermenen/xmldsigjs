{
  "name": "xml-core",
  "version": "1.1.5",
  "description": "`xml-core` is a set of classes that make it easier to work with XML within the browser and node.",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/types/index.d.ts",
  "dependencies": {
    "@xmldom/xmldom": "^0.9.8",
    "tslib": "^2.8.1",
    "xpath.js": "^1.1.0"
  },
  "scripts": {
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.build.json --removeComments --outDir build/cjs --module commonjs --moduleResolution node",
    "build:esm": "tsc -p tsconfig.build.json --removeComments --outDir build/esm --module esnext --moduleResolution bundler",
    "build:types": "tsc -p tsconfig.build.json --outDir build/types --module esnext --moduleResolution bundler --emitDeclarationOnly --declaration",
    "clean": "rimraf build/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/xmldsigjs.git"
  },
  "keywords": [
    "xml"
  ],
  "author": "Peculiar Ventures, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/xmldsigjs/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/xmldsigjs#readme"
}